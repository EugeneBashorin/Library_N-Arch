@using Entities.Entities;
@model Book
@{
    ViewBag.Title = "Edit a book";
}
<h4>Edit a book</h4>
<hr />
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Name,  new { @class = "text-box single-line form-control" } )
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Author, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Author,  new { @class = "text-box single-line form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Publisher, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Publisher, new { @class = "text-box single-line form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Price, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Price, new { @class= "text-box single-line form-control" })
        </div>
    </div>
    <input type="submit" formaction="/Home/EditBook/@Model.Id" class="btn btn-sm btn-success" value="Save">

    @Html.ActionLink("Back to list", "Index", "Home", new { }, new { @class = "btn btn-sm btn-success" })
}

