            @Html.TextBoxFor(model => model.Name, new { @class = "text-box single-line form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Category, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Category, new { @class = "text-box single-line form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Publisher, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Publisher, new { @class = "text-box single-line form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Price, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Price, new { @class = "text-box single-line form-control" })
