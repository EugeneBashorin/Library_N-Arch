@model IEnumerable<LibraryProject.ViewModels.ManageUsersModel>
@{
    ViewBag.Title = "Index";
}
<h4>Users list</h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>      
        <th>
            @Html.Label("Action")
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>           
            <td>
                @using (Html.BeginForm("SetBannUser", "Account", new { id = item.Id }))
                {
                    if (item.IsBanned == "true")
                    {
                        <button type="submit" name="banned" value="false" class="btn btn-sm btn-success">Active</button>

                    }
                    else if (item.IsBanned == "false")
                    {
                        <button type="submit" name="banned" value="true" class="btn btn-sm btn-danger">Banned</button>
                    }               
                }
            </td>
        </tr>
    }
</table>
